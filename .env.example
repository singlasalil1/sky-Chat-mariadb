# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=skychat_user
DB_PASSWORD=test
DB_NAME=skychat

# Server Configuration
FLASK_APP=app.py
FLASK_ENV=development
PORT=5000

# OpenFlights Data URLs (for automated import)
AIRPORTS_URL=https://raw.githubusercontent.com/jpatokal/openflights/master/data/airports.dat
AIRLINES_URL=https://raw.githubusercontent.com/jpatokal/openflights/master/data/airlines.dat
ROUTES_URL=https://raw.githubusercontent.com/jpatokal/openflights/master/data/routes.dat

# RAG Configuration
# Set RAG_ENABLED=true to enable RAG features (requires API keys or local models)
RAG_ENABLED=true
RAG_DEFAULT_MODE=hybrid  # Options: classic, rag, hybrid

# Embedding Provider Configuration
# Options: openai, sentence-transformers, cohere
EMBEDDING_PROVIDER=sentence-transformers
# EMBEDDING_MODEL=  # Optional: specific model name

# LLM Provider Configuration
# Options: openai, anthropic, ollama
LLM_PROVIDER=openai
# LLM_MODEL=  # Optional: specific model name (e.g., gpt-4o-mini, claude-3-5-haiku-20241022)

# API Keys (Required for cloud providers)
# OpenAI (for embeddings and LLM) - Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-...

# Anthropic (alternative LLM provider) - Get from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-...

# Cohere (alternative embedding provider) - Get from: https://dashboard.cohere.com/
# COHERE_API_KEY=...

# RAG Advanced Settings
RAG_TOP_K=5  # Number of documents to retrieve
RAG_MIN_SIMILARITY=0.3  # Minimum similarity threshold (0-1)
RAG_TEMPERATURE=0.7  # LLM temperature (0-1, higher = more creative)
